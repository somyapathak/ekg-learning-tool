-- Create a table to store conditions
CREATE TABLE IF NOT EXISTS ekg_conditions (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    condition_name TEXT NOT NULL,
    features TEXT,
    correct_answer TEXT NOT NULL,
    distractors TEXT,
    explanation_template TEXT
);

